.center {
  display: flex;
  justify-content: center;
}
.lineclamp {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.release-items {
  margin-bottom: 9px;
  padding: 10px 15px;
  background-color: #ffffff;
}
.release-items__head {
  display: flex;
}
.release-items__head--left {
  display: flex;
}
.release-items__head--left .release-items__image--box {
  width: 40px;
  height: 40px;
  overflow: hidden;
  border-radius: 20px;
}
.release-items__head--left .release-items__image--box .image {
  width: 40px;
  height: 40px;
  display: block;
}
.release-items__head--left .release-items__dec {
  margin-left: 11px;
}
.release-items__head--left .release-items__dec--name {
  color: #051b28;
  font-size: 14px;
  line-height: 20px;
  letter-spacing: 0.39px;
}
.release-items__head--left .release-items__dec--time {
  color: #999999;
  font-size: 12px;
  line-height: 17px;
  letter-spacing: 0.33px;
}
.release-items__head--right {
  flex-grow: 1;
  display: flex;
  flex-direction: row-reverse;
}
.release-items__head--right .edit {
  width: 20px;
  height: 20px;
}
.release-items__content {
  padding-top: 14px;
  padding-bottom: 12px;
}
.release-items__content--essay .title {
  display: flex;
  font-size: 18px;
  color: #333333;
  font-weight: bold;
  line-height: 25px;
  margin-bottom: 4px;
}
.release-items__content--essay .title-font {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.release-items__content--essay .quote-image {
  width: 36px;
  height: 17px;
  margin-top: 4px;
  margin-left: 4px;
}
.release-items__content--essay .dec {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #666666;
  font-size: 14px;
}
.release-items__content--image {
  display: flex;
  margin-top: 9px;
  position: relative;
}
.release-items__content--image .scene {
  width: 109px;
  height: 109px;
  margin-right: 9px;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}
.release-items__content--image .scene-number {
  right: 0;
  bottom: 0;
  width: 49px;
  height: 21.8px;
  font-size: 13px;
  color: #ffffff;
  text-align: center;
  position: absolute;
  line-height: 21.8px;
  background-color: rgba(0, 0, 0, 0.6);
}
.release-items__content--image .scene:nth-of-type(3) {
  margin-right: 0;
}
.release-items__content .scene-one {
  width: 100%;
  height: 146px;
  margin-top: 9px;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}
.release-items__foot {
  display: flex;
}
.release-items__foot--left {
  display: flex;
}
.release-items__foot--left .label {
  height: 20px;
  display: flex;
  padding: 0 4px;
  font-size: 12px;
  color: #666666;
  line-height: 20px;
  margin-right: 9px;
  border-radius: 2px;
  letter-spacing: 0.33px;
  background-color: #edf0f5;
}
.release-items__foot--right {
  flex-grow: 1;
  display: flex;
  flex-direction: row-reverse;
}
.release-items__foot--right .see {
  display: flex;
}
.release-items__foot--right .see-icon {
  width: 13px;
  height: 10px;
  display: block;
  margin-top: 5px;
}
.release-items__foot--right .see-number {
  font-size: 12px;
  color: #666666;
  line-height: 20px;
  padding-left: 2px;
  letter-spacing: 0.33px;
}
