<view class="change-name">
    <view class="change-name__head">
      <input type="text" value="{{ name }}" class="change-name__head--name" bindinput="changeNick" maxlength="16"/>
      <view class="change-name__head--image">
        <image src="../../../images/tn-wx-search-clear.png" class="delete" bindtap="deleteName"/>
      </view>
    </view>
    <view class="change-name__foot">
      <view class="change-name__foot--btn" bindtap="getNewName">完成</view>
    </view>
  </view>