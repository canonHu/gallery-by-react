.tab-view {
  width: 100%;
  white-space: nowrap;
  height: 47px;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.tab-item {
  display: inline-block;
  height: 100%;
  padding-left: 10px;
  padding-right: 10px;
}
.tab-item-back {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.tab-item-back-back {
  position: relative;
  bottom: 0px;
}
.tab-item-text {
  font-size: 16px;
  margin-bottom: 11px;
}
.tab-identity {
  border-radius: 100px;
  width: 100%;
  height: 3px;
}
.red-dot {
  background-color: #FF6622;
  width: 6px;
  height: 6px;
  border-radius: 100px;
}
.dot-style {
  position: absolute;
  top: 0px;
  right: -7px;
}
