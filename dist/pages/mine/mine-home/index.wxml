
  <view class="mine-home">

    <!-- 我的首页头部 -->
    
	<view class="mine-home__head">
		<view class="center">
			<view class="mine-home__head--box">
				<view class="mine-home__head--images">
					<image class="mine-home__head--image" src="{{ $mineHomeHead$userInfo.headImg }}"/>
				</view>
				<image class="mine-home__head--edit" src="../../../images/tn-wx-mine-edit.png" data-num="{{$mineHomeHead$number}}" bindtap="$mineHomeHead$changeName"/>
			</view>
		</view>
		<view class="center name">
			<text>{{ $mineHomeHead$name }}</text>
		</view>
		<!-- <text class="center phone">184****2346</text> -->
	</view>


    <view class="mine-home__content">
      <view class="center">

        <!-- 我的发布 -->
        <view class="mine-content release" bindtap="mineRelease">
          <text class="mine-content__number">{{ userInfo.publishCount }}</text>
          <text class="mine-content__title">我的发布</text>
          <view class="mine-content__box">
            <image class="mine-content__box--image" src="../../../images/tn-wx-mine-release.png"/>
          </view>
        </view>

        <!-- 我的收藏 -->
        <view class="mine-content" bindtap="mineCollection">
          <text class="mine-content__number">{{ userInfo.collectCount }}</text>
          <text class="mine-content__title">我的收藏</text>
          <view class="mine-content__box">
            <image class="mine-content__box--image mine-content__box--collection" src="../../../images/tn-wx-mine-collection.png"/>
          </view>
        </view>
      </view>
    </view>

  </view>