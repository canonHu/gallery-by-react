
  <view>
    <view style="padding-top: 20px; background-color: #FFFFFF">
      <view class="search-view">
        <text class="cityName" bindtap="jumpPoiSelect">{{cityName}}</text>
        <image src="../../../images/tn-wx-square-arrow-down.png" class="arrow" bindtap="jumpPoiSelect"/>
        <view class="place-view"/>
        <image src="../../../images/tn-wx-search-search.png" class="search-img"/>
        <text class="place-text" bindtap="jumpContentSelect">目的地/关键词</text>
      </view>
    </view>
    <view class="tab-list">
      <view style="width: {{getTabViewWidth}}px;">
        
  <scroll-view scroll-x="true" class="tab-view" scroll-into-view="{{$tablist$toView}}" scroll-with-animation="true">
      <block wx:for="{{$tablist$tabs}}" wx:for-index="$tablist$index" wx:for-item="$tablist$item" wx:key="$tablist$index">
        <view id="{{'tabitem_' + $tablist$index}}" class="tab-item" data-index="{{$tablist$index}}" bindtap="$tablist$clickedSimpleItem">
          <view class="tab-item-back">
            <view class="tab-item-back-back">
              <view style="display: flex; flex-direction: row;">
                <text class="tab-item-text" style="color: {{$tablist$getCurrentSelect === $tablist$index ? $tablist$selectTitleColor : $tablist$defaultTitleColor}}; font-weight: {{$tablist$getCurrentSelect === $tablist$index ? $tablist$selectTitleBold : $tablist$defaultTitleBold}}">{{$tablist$item.name}}</text>
              </view>
              <view class="tab-identity" style="background-color: {{$tablist$getCurrentSelect === $tablist$index ? $tablist$indicatorColor : 'transparent'}}"/>
              <view  wx:if="{{$tablist$getCurrentSelect !== $tablist$index}}" class="dot-style">
                <view class="red-dot" hidden="{{!$tablist$item.hideRedDot}}"/>
              </view>
            </view>
          </view>
        </view>
      </block>
  </scroll-view>

      </view>

      <image src="../../../images/tn-wx-space-detail-shadow.png" style="width: 14px; height: 42px;"/>
      <view bindtap="clickedShowTabListView" class="tab-select">
        <image src="../../../images/tn-wx-space-tab-more.png" style="width: 14px; height: 8px;"/>
      </view>
    </view>
    <view  wx:if="{{list.length > 1}}" style="position: relative;">
      <view class="sort-view">
        <view>
          <text class="count-text">共<text>{{list.length}}</text>条信息</text>
        </view>
        <view bindtap="clickedSortButton" class="sort-button">
          <text style="font-size: 14px; color: #999999;">{{sortTypes[currentSort]}}</text>
          <image src="../../../images/tn-wx-space-detail-sort.png" style="margin-left: 5px;width: 15px; height: 13px;"/>
        </view>
      </view>
      <scroll-view style="margin-bottom: 50px">
        <block wx:for="{{list}}" wx:for-index="index" wx:for-item="item" wx:key="index">
          
  <view class="release-items" bindtap="$releaseitem$tapEvent" data-com-index="{{index}}">
    <view class="release-items__head">
      <view class="release-items__head--left">
        <view class="release-items__image">
          <view class="release-items__image--box">
            <image class="image" src="{{ item.userInfo.headImage }}"/>
          </view>
        </view>
        <view class="release-items__dec">
          <view class="release-items__dec--name">{{ item.userInfo.userName }}</view>
          <view class="release-items__dec--time">{{ item.publishTime }}</view>
        </view>
      </view>
      <view  wx:if="{{ !cancelFlag && fromSquare }}" catchtap="$releaseitem$tapMoreEvent" id="{{'more_' + index}}" class="release-items__head--right" data-com-index="{{index}}">
        <image src="../../../images/tn-wx-space-detail-item-dots.png" style="width: 20px; height: 4px; margin-top: 10px; padding-bottom: 5px"/>
      </view>
      <view  wx:if="{{ cancelFlag }}" class="release-items__head--right">
        <image class="edit" wx:if="{{ item.flag }}" src="../../../images/tn-wx-editor-select-false.png"/>
        <image class="edit" wx:else src="../../../images/tn-wx-editor-select-true.png"/>
      </view>
    </view>

    <view class="release-items__content">
      <view class="release-items__content--essay">
        <view class="title">
          <view class="title-font">{{ item.title }}</view>
          <view>
            <image hidden="{{ item.hasQuote }}" class="quote-image" src="../../../images/tn-wx-quote.png"/>
          </view>
        </view>
        <view class="dec">{{ item.elementContent }}</view>
      </view>
      <view wx:if="{{ item.imageNumber !== 1 }}">
        <view class="release-items__content--image">
          <block wx:for="{{ item.imagesList }}" wx:for-index="$releaseitem$index" wx:for-item="$releaseitem$item" wx:key="$releaseitem$index">
            <view class="scene" style="background-image: url({{ $releaseitem$item }})">
            </view>
          </block>
          <view hidden="{{ !item.imagesNumberFlag }}" class="scene-number">共{{ item.imageNumber }}张</view>
        </view>
      </view>
      <view wx:else>
        <image class="scene-one" style="background-image: url({{ item.imagesList[0] }})"/>
      </view>
    </view>

    <view class="release-items__foot">
      <view class="release-items__foot--left">
        <view class="label">
          <text class="label-text">{{ item.poiList[0].name }}</text>
        </view>
      </view>
      <view class="release-items__foot--right">
        <view class="see">
          <image class="see-icon" src="../../../images/tn-wx-mine-see.png"/>
          <view class="see-number">{{ item.pv }}</view>
        </view>
      </view>
    </view>
  </view>

        </block>
      </scroll-view>

      <!--蒙层框-->
      <view  wx:if="{{showAlert}}" bindtap="clickedMaskBack" class="alert-mask">
        <view class="alert-back">
          
  <view class="alert-view" style="top: {{$alertlist$syncOffsetY}}px;">
    <view class="alert-arrow">
      <image src="../../../images/tn-wx-space-detail-alert-arrow.png" style="width: 14px; height: 7px; margin-right: 6px;"/>
    </view>
    <view class="alert-content">
      <block wx:for="{{$alertlist$items}}" wx:for-index="$alertlist$index" wx:for-item="$alertlist$item" wx:key="$alertlist$index">
        <view bindtap="$alertlist$clickedAlertItem" data-index="{{$alertlist$index}}" class="alert-item">
          <text style="font-size: 15px; color: {{($alertlist$showSelectStyle && $alertlist$currentSelect === $alertlist$index) ? '#FF7733' : '#333333'}};">{{$alertlist$item}}</text>
        </view>
        <view  wx:if="{{$alertlist$index !== ($alertlist$totalCount - 1)}}" class="border"/>
      </block>
    </view>
  </view>

        </view>
      </view>

      <!--tab栏-->
      <view wx:if="{{showTabview}}" bindtap="clickedShowTabListView" class="alert-mask">
        
  <view class="tab-list-view">
    <block wx:for="{{$tablistview$tabs}}" wx:for-index="$tablistview$index" wx:for-item="$tablistview$item" wx:key="$tablistview$index">
      <view id="{{$tablistview$index}}" bindtap="$tablistview$tapEvent" class="tab-list-button" style="background-color: {{$tablistview$selectIndex === $tablistview$index ? $tablistview$selectBackColor : $tablistview$defaultBackColor}}; border: 0.5px solid {{$tablistview$selectIndex === $tablistview$index ? $tablistview$selectBorderColor : $tablistview$defaultBorderColor}}">
        <text class="tab-list-view-tab-text" style="color: {{$tablistview$selectIndex === $tablistview$index ? $tablistview$selectTitleColor : $tablistview$defaultTitleColor}}; font-weight: {{$tablistview$selectIndex === $tablistview$index ? $tablistview$selectTitleBold : $tablistview$defaultTitleBold}}">{{$tablistview$item.name}}</text>
      </view>
    </block>
  </view>

      </view>
    </view>
    <image  wx:if="{{showToTop}}" bindtap="clickedTopButton" class="top-button" style="width: 55px; height: 55px;" src="../../../images/tn-wx-square-back-icon.png"/>
    <view bindtap="clickedCompleteButton" class="complete-button">
      <text class="complete-button-text">添加到空间</text>
    </view>
  </view>