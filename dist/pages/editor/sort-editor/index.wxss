page {
  height: 100%;
}
.back-view {
  background-color: #EDF0F5;
  height: 100%;
  width: 100%;
}
.sort-title {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 15px;
  color: #666666;
  font-weight: bold;
}
.sort-text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  font-size: 13px;
  color: #666666;
}
.sort-view {
  position: absolute;
  height: 110px;
  width: 110px;
  background: white;
}
.sort-view-mask {
  position: absolute;
  top: 0px;
  left: 0px;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}
.sort-move-view {
  position: fixed;
  height: 110px;
  width: 110px;
  background: white;
}
.touch-view {
  height: 100%;
  width: 100%;
  background: #EDF0F5;
}
