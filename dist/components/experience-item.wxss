.container {
  margin-top: 10px;
  padding-bottom: 15px;
  padding-left: 15px;
  padding-right: 15px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  background-color: #ffffff;
  position: relative;
}
.head-image {
  width: 48px;
  height: 48px;
  border-radius: 100px;
  margin-top: 15px;
}
.content-view {
  display: flex;
  flex-direction: column;
  margin-top: 18px;
}
.user-name {
  margin-left: 10px;
  color: #333333;
  font-size: 16px;
}
.content-text {
  margin-left: 10px;
  color: #A5A5A5;
  font-size: 14px;
  margin-top: 6px;
}
.praise-content-text {
  margin-left: 10px;
  color: #222222;
  font-size: 14px;
  margin-top: 6px;
}
.link-text {
  margin-left: 10px;
  color: #65ABFC;
  font-size: 14px;
  margin-top: 4px;
}
.date-view {
  position: absolute;
  top: 22px;
  right: 15px;
  color: #A5A5A5;
  font-size: 12px;
}
.other-view {
  background-color: #F2F4F7;
  border-radius: 2px;
  padding: 6px 10px 8px 10px;
}
.other-content {
  font-size: 13px;
  color: #666666;
  line-height: 18px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.other-user {
  color: #666666;
  font-weight: bold;
}
