.simple-image-view {
  display: inline-block;
  text-align: center;
}
.simple-image {
  position: relative;
}
.simple-image-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 150px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  border-radius: 2px;
}
.chinese-name {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 18px;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 13px;
}
.mask-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 150px;
  border-radius: 2px;
}
.look-text {
  font-size: 13px;
  color: #2A2A2A;
}
.attribute-look-text {
  font-weight: bold;
  color: #666666;
}
.new-view {
  width: 28px;
  height: 14px;
  position: absolute;
  left: 0px;
  top: 10px;
  display: flex;
}
.only-self-view {
  width: 49px;
  height: 14px;
  position: absolute;
  left: 0px;
  top: 27px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.only-self-text {
  color: #ffffff;
  font-size: 8px;
  line-height: 11px;
  position: absolute;
  left: 2px;
}
.select-style {
  width: 20px;
  height: 20px;
  position: absolute;
  right: 6.5px;
  top: 6.5px;
  display: flex;
  justify-content: center;
  align-items: center;
}
