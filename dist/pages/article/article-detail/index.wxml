
  <view>
    <view style="background-color: #FFFFFF">
      <view class="header">
        <text class="title">{{articleItem.title}}</text>
        <view  wx:if="{{isAuthor}}" class="more-img-view">
          <image style="width: 20px; height: 4px;" src="../../../images/tn-wx-space-detail-item-dots.png" catchtap="clickMore"/>
        </view>
      </view>
      <view class="author">
        <image class="avatar" src="{{articleItem.userInfo.headImage}}"/>
        <text class="user-name">{{articleItem.userInfo.nickName}}</text>
        <text class="time-text">{{articleItem.publishTime}}</text>
      </view>
      <view>
        <block wx:for="{{articleItem.elements}}" wx:for-index="index" wx:for-item="item" wx:key="index">
          
  <view style="display: flex; margin-left: 15px; margin-right: 15px">
    <view  wx:if="{{item.elementType === 0}}" style="display: flex; flex-direction: column">
      <text class="title">{{item.title}}</text>
      <text class="content">{{item.content}}</text>
    </view>
    <view  wx:if="{{item.elementType === 1}}" style="display: flex; width: 100%; flex-direction: column">
      <block wx:for="{{item.imgs}}" wx:for-index="$elementitem$index" wx:for-item="$elementitem$item" wx:key="$elementitem$index">
        <image class="image" src="{{$elementitem$item.imgUrl}}"/>
      </block>
    </view>
  </view>

        </block>
      </view>
      
  <view class="line">
    <block wx:for="{{$poiBottom$poiList}}" wx:for-index="$poiBottom$index" wx:for-item="$poiBottom$item" wx:key="$poiBottom$index">
      <view class="label">
        <image class="icon" src="../../../images/tn-wx-desination-item-location.png"/>
        <text class="text">{{$poiBottom$item.name}}</text>
      </view>
    </block>
  </view>

    </view>
    <view class="footer">
      <button data-name="shareBtn" open-type="share" plain="true">
        
  <view bindtap="$shareBottom$onItemClick" class="container">
    <image class="icon" src="{{$shareBottom$icon}}"/>
    <text class="text">{{$shareBottom$showText}}</text>
  </view>

      </button>
      <view class="split-line"/>
      
  <view bindtap="$collectBottom$onItemClick" class="container">
    <image class="icon" src="{{$collectBottom$icon}}"/>
    <text class="text">{{$collectBottom$showText}}</text>
  </view>

      <view class="split-line"/>
      
  <view bindtap="$spaceBottom$onItemClick" class="container">
    <image class="icon" src="{{$spaceBottom$icon}}"/>
    <text class="text">{{$spaceBottom$showText}}</text>
  </view>

    </view>
    <!--蒙层框-->
    <view wx:if="{{showAlert}}" bindtap="clickedMaskBack" class="alert-mask">
      <view class="alert-back">
        
  <view class="alert-view" style="top: {{$alertlist$syncOffsetY}}px;">
    <view class="alert-arrow">
      <image src="../../../images/tn-wx-space-detail-alert-arrow.png" style="width: 14px; height: 7px; margin-right: 6px;"/>
    </view>
    <view class="alert-content">
      <block wx:for="{{$alertlist$items}}" wx:for-index="$alertlist$index" wx:for-item="$alertlist$item" wx:key="$alertlist$index">
        <view bindtap="$alertlist$clickedAlertItem" data-index="{{$alertlist$index}}" class="alert-item">
          <text style="font-size: 15px; color: {{($alertlist$showSelectStyle && $alertlist$currentSelect === $alertlist$index) ? '#FF7733' : '#333333'}};">{{$alertlist$item}}</text>
        </view>
        <view  wx:if="{{$alertlist$index !== ($alertlist$totalCount - 1)}}" class="border"/>
      </block>
    </view>
  </view>

      </view>
    </view>
  </view>