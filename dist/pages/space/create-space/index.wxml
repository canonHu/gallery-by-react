
  <view>
    <view class="current-back">
      <view class="cell-style">
        <input value="{{initInputText}}" placeholder="添加空间名" bindinput="bindinput" style="flex: 1;"/>
      </view>
      <view  wx:if="{{canSetCover}}" class="cell-style">
        <text class="cell-title-style">设置封面</text>
        <view bindtap="clickedCoverActionSheet" style="display: flex; align-items: center;">
          <image src="{{coverImageUrl}}" mode="aspectFill" style="width: 60px; height: 60px; background-color: antiquewhite;"/>
          <image src="../../../images/tn-wx-space-arrow.png" style="width: 6px; height: 12px; margin-left: 7px;"/>
        </view>
      </view>
      <view class="cell-style">
        <text class="cell-title-style">权限</text>
        <view bindtap="clickedPermissionsActionSheet">
          <text class="current-permissions-style">{{permissions[currentPermissions]}}</text>
          <image src="../../../images/tn-wx-space-arrow.png" style="width: 6px; height: 12px; margin-left: 7px;"/>
        </view>
      </view>
      <view class="tag-list">
        <block wx:for="{{selectPois}}" wx:for-index="index" wx:for-item="item" wx:key="index">
          <view class="poi-button">
            <image src="../../../images/tn-wx-desination-item-location.png" style="width: 11px; height: 12px; margin-right: 7px;"/>
            <text class="poi-text">{{item.poiName}}</text>
            <view bindtap="clickedDeletePoiButton" data-info="{{item}}" class="delete-button">
              <image src="../../../images/tn-wx-desination-item-delete.png" style="width: 12px; height: 12px;"/>
            </view>
          </view>
        </block>
        <view bindtap="clickedAddButton" class="poi-button">
          <image src="../../../images/tn-wx-desination-item-add.png" style="width: 12px; height: 12px; margin-right: 6px;"/>
          <text class="poi-text">添加城市/景点</text>
        </view>
      </view>
    </view>

    <view bindtap="clickedCompleteButton" class="complete-view">
      <text class="complete-text">完成</text>
    </view>
  </view>