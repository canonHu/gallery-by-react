.reply-container {
  margin-top: 10px;
  padding-bottom: 10.5px;
  padding-left: 15px;
  padding-right: 15px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  background-color: #ffffff;
  position: relative;
}
.reply-head-image {
  width: 48px;
  height: 48px;
  border-radius: 100px;
  margin-top: 12px;
}
.reply-content-view {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-top: 12px;
}
.reply-user-name {
  margin-left: 8px;
  margin-top: 1px;
  color: #333333;
  font-size: 16px;
  line-height: 22px;
}
.reply-content-text {
  margin-left: 8px;
  margin-top: 4px;
  color: #000000;
  font-size: 14px;
  line-height: 17px;
}
.reply-date-text {
  margin-left: 8px;
  margin-top: 1px;
  color: #A5A5A5;
  font-size: 12px;
}
.reply-view {
  position: absolute;
  top: 12px;
  right: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 52px;
  height: 24px;
  border-radius: 100px;
  border: 0.5px solid #65ABFC;
}
.reply-text {
  color: #65ABFC;
  font-size: 14px;
}
.reply-other-view {
  margin-left: 8px;
  background-color: #F2F4F7;
  border-radius: 2px;
  padding: 6px 10px 9px 10px;
}
.reply-other-content {
  font-size: 13px;
  color: #666666;
  line-height: 18px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.reply-other-user {
  color: #666666;
  font-weight: bold;
}
.reply-other-experience {
  font-size: 14px;
  color: #666666;
  line-height: 20px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.reply-triangle-view {
  margin-left: 35px;
  display: flex;
  align-items: center;
}
.source-view {
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
  align-items: center;
  margin-top: 4.5px;
}
.source-text {
  font-size: 12px;
  color: #999999;
}
