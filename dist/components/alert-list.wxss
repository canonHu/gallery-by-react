.border {
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
}
.alert-item {
  padding-top: 8px;
  padding-bottom: 8px;
  padding-left: 15px;
}
.alert-content {
  background-color: #FFFFFF;
  border-radius: 6px;
  padding-top: 2px;
  padding-bottom: 2px;
}
.alert-arrow {
  width: 150px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.alert-view {
  position: absolute;
  right: 9px;
  width: 150px;
  display: flex;
  flex-direction: column;
}
