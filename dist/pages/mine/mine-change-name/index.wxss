page {
  background-color: #f6f6f6;
}
.center {
  display: flex;
  justify-content: center;
}
.change-name__head {
  display: flex;
  padding-left: 15px;
  background-color: #ffffff;
}
.change-name__head--name {
  height: 48px;
  flex-grow: 1;
  color: #999999;
  line-height: 48px;
  box-sizing: border-box;
}
.change-name__head--image {
  width: 20px;
  display: flex;
  padding-right: 15px;
  flex-direction: row-reverse;
}
.change-name__head--image .delete {
  width: 12.7px;
  height: 12.7px;
  display: block;
  margin-top: 18.1px;
}
.change-name__foot {
  display: flex;
  justify-content: center;
  margin-top: 96px;
}
.change-name__foot--btn {
  width: 335px;
  height: 44px;
  color: #ffffff;
  line-height: 44px;
  text-align: center;
  border-radius: 22px;
  background: #ff7733;
  box-shadow: -1px 6px 13px 0 rgba(255, 111, 10, 0.3);
}
